<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivWelcome"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:src="@drawable/logo_gojo_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/caviardreams_bold"
            android:text="@string/bienvenido_nakama"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/caviardreams_bold"
            android:hint="@string/ingresa_tu_nombre"
            android:inputType="text"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/etUserAge"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/caviardreams_bold"
            android:hint="@string/ingresa_tu_edad"
            android:inputType="number"
            android:textAlignment="center" />

        <Button
            android:id="@+id/bnContinue"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/caviardreams_bold"
            android:text="@string/confirmar" />

    </LinearLayout>

</LinearLayout>