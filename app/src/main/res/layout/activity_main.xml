<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivWelcome"
        android:layout_width="310dp"
        android:layout_height="314dp"
        android:layout_marginBottom="40dp"
        tools:srcCompat= "@drawable/logo_gojo_round" />

    <TextView
        android:id="@+id/tvWelcome"
        android:fontFamily="@font/caviardreams_bold"
        android:textSize="30sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:text = "@string/bienvenido_nakama"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:hint="@string/ingresa_tu_nombre"
        android:fontFamily="@font/caviardreams_bold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etUserAge"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:hint="@string/ingresa_tu_edad"
        android:fontFamily="@font/caviardreams_bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/bnContinue"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="@string/confirmar"
        android:fontFamily="@font/caviardreams_bold"/>

</LinearLayout>